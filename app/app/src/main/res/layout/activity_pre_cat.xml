<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efe9cc"
    tools:context=".pre_cat">


    <TextView
        android:id="@+id/bar_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="122dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="122dp"
        android:text="@string/pre_cat_kor"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/layouter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/pre_Art"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/pre_art"
                android:checked="false"
                android:textOff="@string/pre_art_kor"
                android:textOn="@string/pre_art_kor"
                android:textSize="0sp" />

            <TextView
                android:id="@+id/pre_art_text"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/pre_art_kor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/pre_Book"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/pre_book"
                android:checked="false"
                android:textOff="@string/pre_book_kor"
                android:textOn="@string/pre_book_kor"
                android:textSize="0sp" />

            <TextView
                android:id="@+id/pre_book_text"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/pre_book_kor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/pre_Camera"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/pre_camera"
                android:checked="false"
                android:textOff="@string/pre_camera_kor"
                android:textOn="@string/pre_camera_kor"
                android:textSize="0sp" />

            <TextView
                android:id="@+id/pre_camera_text"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/pre_camera_kor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/pre_Dance"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/pre_dance"
                android:checked="false"
                android:textOff="@string/pre_dance_kor"
                android:textOn="@string/pre_dance_kor"
                android:textSize="0sp" />

            <TextView
                android:id="@+id/pre_dance_text"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/pre_dance_kor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/pre_Food"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/pre_food"
                android:checked="false"
                android:textOff="@string/pre_food_kor"
                android:textOn="@string/pre_food_kor"
                android:textSize="0sp" />

            <TextView
                android:id="@+id/pre_food_text"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/pre_food_kor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/pre_Game"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/pre_game"
                android:checked="false"
                android:textOff="@string/pre_game_kor"
                android:textOn="@string/pre_game_kor"
                android:textSize="0sp" />

            <TextView
                android:id="@+id/pre_game_text"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/pre_game_kor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/pre_Language"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/pre_language"
                android:checked="false"
                android:fillColor="#ffffff"
                android:textOff="@string/pre_language_kor"
                android:textOn="@string/pre_language_kor"
                android:textSize="0sp" />

            <TextView
                android:id="@+id/pre_language_text"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/pre_language_kor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/pre_Meet"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/pre_meet"
                android:checked="false"
                android:textOff="@string/pre_meet_kor"
                android:textOn="@string/pre_meet_kor"
                android:textSize="0sp" />

            <TextView
                android:id="@+id/pre_meet_text"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/pre_meet_kor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/pre_Movie"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/pre_movie"
                android:checked="false"
                android:textOff="@string/pre_movie_kor"
                android:textOn="@string/pre_movie_kor"
                android:textSize="0sp" />

            <TextView
                android:id="@+id/pre_movie_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/pre_movie_kor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/pre_Music"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/pre_music"
                android:checked="false"
                android:textOff="@string/pre_music_kor"
                android:textOn="@string/pre_music_kor"
                android:textSize="0sp" />

            <TextView
                android:id="@+id/pre_music_text"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/pre_music_kor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/pre_Sports"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/pre_sports"
                android:checked="false"
                android:textOff="@string/pre_sports_kor"
                android:textOn="@string/pre_sports_kor"
                android:textSize="0sp" />

            <TextView
                android:id="@+id/pre_sports_text"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/pre_sports_kor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/pre_Travel"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/pre_travel"
                android:checked="false"
                android:textOff="@string/pre_travel_kor"
                android:textOn="@string/pre_travel_kor"
                android:textSize="0sp" />

            <TextView
                android:id="@+id/pre_travel_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/pre_travel_kor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/pre_Volunteer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/pre_volunteer"
                android:checked="true"
                android:textOff="@string/pre_volunteer_kor"
                android:textOn="@string/pre_volunteer_kor"
                android:textSize="0sp" />

            <TextView
                android:id="@+id/pre_volnteer_text"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/pre_volunteer_kor"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </com.google.android.material.chip.ChipGroup>

    </LinearLayout>

    <Button
        android:id="@+id/saveButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#00FF0000"
        android:onClick="OnClickHandler"
        android:text="@string/save_kor"
        android:textColor="#423C3C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#00333238"
        android:contentDescription="@string/back"
        android:scaleX="1"
        android:scaleY="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_back" />

</androidx.constraintlayout.widget.ConstraintLayout>